<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/row_id"
        android:gravity="center"
        android:textColor="@color/custom_row_text"
        android:textSize="@dimen/lv_text_size"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/row_questions"
        android:gravity="center"
        android:layout_marginLeft="@dimen/tv_statistic_margin_left"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/lv_text_size"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/row_time"
        android:gravity="center"
        android:layout_marginLeft="@dimen/tv_statistic_margin_left"
        android:textColor="@color/custom_row_text"
        android:textSize="@dimen/lv_text_size"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/row_correct"
        android:gravity="center"
        android:layout_marginLeft="@dimen/tv_statistic_margin_left"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/lv_text_size"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/row_incorrect"
        android:gravity="center"
        android:layout_marginLeft="@dimen/tv_statistic_margin_left"
        android:textColor="@color/custom_row_text"
        android:textSize="@dimen/lv_text_size"
        android:layout_marginBottom="1dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/row_percentage"
        android:gravity="center"
        android:layout_marginLeft="@dimen/tv_statistic_margin_left"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/lv_text_size"
        android:layout_marginBottom="1dp"/>
</LinearLayout>