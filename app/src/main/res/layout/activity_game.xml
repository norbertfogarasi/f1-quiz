<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fogarasi.norbert.f1quiz.GameActivity"
    android:background="@mipmap/f1_main_picture">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" /-->

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_counter_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="100sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/tv_text_size"
            android:padding="5dp"
            android:background="@drawable/textview_timer_background"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:id="@+id/tv_question_number"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_text_size"
            android:background="@drawable/textview_timer_background"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="4"
        android:gravity="left"
        android:onClick="onClick"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:background="@drawable/textview_game_background"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn_game_color"
        android:onClick="onClick"
        android:textColor="@drawable/btn_game_textcolor"
        android:textSize="@dimen/btn_text_size" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn_game_color"
        android:onClick="onClick"
        android:textColor="@drawable/btn_game_textcolor"
        android:textSize="@dimen/btn_text_size" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn_game_color"
        android:onClick="onClick"
        android:textColor="@drawable/btn_game_textcolor"
        android:textSize="@dimen/btn_text_size" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn_game_color"
        android:onClick="onClick"
        android:textColor="@drawable/btn_game_textcolor"
        android:textSize="@dimen/btn_text_size" />
</LinearLayout>